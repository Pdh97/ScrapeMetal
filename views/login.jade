            .control-group
              .form-group.col-xs-12.floating-label-form-group.controls
                label Password
                input#password.form-control(type='password', placeholder='Password', required='', name='password', data-validation-required-message='Please enter your password.')
                p.help-block.text-danger
              br
              #success
              .form-group
                button.btn.btn-primary(type='submit') Login
              .form-group
                a(href='/forgot')
                  font(size='3', color='green') Forgot Password
